[alias]
    ad = add
    br = !git --no-pager branch
    cm = commit -v
    co = checkout
    da = reset HEAD
    df = diff
    dfs = diff --staged
    dfw = diff --color-words
    dfsw = diff --staged --color-words
    last = !git --no-pager lg -1
    lg = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
    lgp = log --stat -p
    st = status -sb
[core]
    excludesfile = ~/.config/git/ignore
[color "diff"]
    whitespace = red reverse
    newMoved = cyan
    oldMoved = blue
[color "status"]
    added = green
    changed = green
    untracked = red
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
    wsErrorHighlight = old,new
[difftool]
    prompt = false
[pull]
    ff = only
[log]
    date = iso
[init]
    defaultBranch = master
[include]
    path = ~/.dotfiles/local/gitconfig

; vim:ft=gitconfig
