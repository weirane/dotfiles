[alias]
    ad = add
    br = !git --no-pager branch
    cm = commit -v
    co = checkout
    da = reset HEAD
    df = diff
    dfs = diff --staged
    last = !git --no-pager lg -1
    lg = log --graph --pretty='%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset'
    lgp = log --stat -p
    st = status -sb
[core]
    excludesfile = ~/.config/git/ignore
[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
    newMoved = cyan
    oldMoved = blue
[color "status"]
    added = green
    changed = green
    untracked = red
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[include]
    path = ~/.dotfiles/local/gitconfig
